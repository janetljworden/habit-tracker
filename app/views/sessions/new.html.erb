<%= title "Login" %>

<div class='forms'>
    <%= bootstrap_form_with(url: sessions_path, method: :post) do |f| %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <div class="button-container">
            <%= f.primary "Login", class: "primary-button" %>
        </div>
    <% end %>
</div>