<%= title "Login" %>

<div class='forms'>
    <%= bootstrap_form_with(url: sessions_path, method: :post) do |f| %>
        <%= f.email_field :email %>
        <%= f.password_field :password %>
        <div class="button-container">
            <%= f.primary "Login", class: "primary-button" %>
        </div>
    <% end %>
</div>

<div class="button-container">
    <%= button_to "Login with Github", "/auth/github", class: "btn btn-secondary", data: {turbo: false} %>
</div>