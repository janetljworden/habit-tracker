<%= bootstrap_form_with(model: @user) do |f| %>
    <%= f.alert_message "Please fix the errors below.", error_summary: false %>
    <% if @user.persisted? %>
        <%= f.password_field :old_password, label: "Current Password" %>
    <% end %>
    <%= f.text_field :name %>
    <%= f.email_field :email %>
    <% if @user.has_password? %>
        <%= f.password_field :password, label: @user.persisted? ? "New Password" : "Password" %>
        <%= f.password_field :password_confirmation, label: @user.persisted? ? "Confirm New Password" : "Confirm Password" %>
    <% end %>
    <div class="button-container">
        <%= f.primary @user.persisted? ? "Update" : "Sign Up", class: "primary-button" %>
    </div>
<% end %>