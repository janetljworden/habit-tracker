<% title @habit.name %>

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <p class="card-text">
            <strong>Frequency:</strong> <%= @habit.frequency %><br>
            <strong>Start Date:</strong> <%= @habit.start_date.strftime("%B %d, %Y") %>
        </p>
        <%= link_to "Edit", edit_habit_path(@habit), class: "btn btn-secondary" %> <%= link_to "View Entries", habit_entries_path(@habit), class: "btn btn-secondary" %>
    </div>
</div>

<%= link_to "Back", habits_path, class: 'primary-button' %>