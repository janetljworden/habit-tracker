<%= bootstrap_form_with(model: [@habit,@entry]) do |f| %>
    <%= f.datetime_field :date %>
    <%= f.text_field :status %>
    <%= f.text_area :notes %>
    <div class="button-container">
        <%= f.primary @entry.persisted? ? "Update" : "Create", class: "primary-button" %>

        <% if @entry.persisted? %>
            <%= button_to "Delete", [@habit,@entry], method: :delete, class: 'delete-button', form: { data: { turbo_confirm: "Are you sure?" } }, data: { turbo: false } %>
        <% end %>
    </div>
<% end %>